extends layout

block content
    h1= title
    if message_list.length
        ul
            each message in message_list
                li
                    a(href=message.url) #{message.title}
                    if (!currentUser)
                        p #{message.text}
                    else if (currentUser.secret === "secret")
                        p (#{message.user.name},#{message.timestamp_formatted}): #{message.text}
                    else 
                        p #{message.text}

    
    else
        p There are no messages