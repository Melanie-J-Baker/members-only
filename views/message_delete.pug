extends layout

block content

  h1 #{title}: #{message.title}

  p #[strong Posted by: ]
    a(href=message.user.url) #{message.user.name}
  p #[strong Posted:] #{message.timestamp_formatted}
  p #[strong Message:] #{message.text}

  hr
  p Do you really want to delete this message?

  form(method='POST')
    div.form-group
        input#id.form-control(type='hidden',name='id', value=message._id )
        button.btn.btn-primary(type='submit') Delete

  a(href="/messageboard/message/" + message._id) Cancel